<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/silver"
    android:layout_height="wrap_content"
    tools:context=".Common.Invoice.UnpaidInvoice">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/bankToolbar_invoice"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/left_arrow"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/toolbarBank"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invoice"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:id="@+id/cancel"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/orange"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


            <include
                layout="@layout/sample_profile_invoice"
                android:layout_margin="10dp"
                android:id="@+id/profile_lt"
                android:layout_below="@id/bankToolbar_invoice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/white"
                android:id="@+id/middle_line"
                android:layout_below="@id/profile_lt"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/requestRL"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/service_requested"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/hk_grotesk_medium"
                        android:textSize="15sp"
                        android:textColor="@color/orange"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:id="@+id/line_dotted"
                    android:src="@drawable/dotted_line"
                    android:layerType="software"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Request Services"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black"
                        android:id="@+id/tvheading" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Labour"
                        android:gravity="center"
                        android:layout_marginStart="30dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="parts"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Ac Compressor Repair"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:text="$16.99"
                        android:gravity="center"
                        android:layout_marginStart="30dp"
                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="$16.99"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Brake Services"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:gravity="center"
                        android:layout_marginStart="30dp"
                        android:text="$16.99"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:text="$16.99"
                        android:textColor="@color/black"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Oil Change"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:gravity="center"
                        android:layout_marginStart="30dp"
                        android:text="$16.99"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:text="$16.99"
                        android:textColor="@color/black"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Subtotal"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black"
                        android:id="@+id/subtotal" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="$90.97"
                        android:gravity="center"
                        android:layout_marginStart="30dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="$90.97"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Discount"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:text="$16.99"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="VAT (10%)"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:text="$2.99"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted_line"
                    android:layerType="software"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Total"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="$90.97"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:text="Total"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="$90.97"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/hk_grotesk_semi_bold"
                        android:textColor="@color/black" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>