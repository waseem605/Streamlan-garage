<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context="Common.PromoCodeRequest">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/back_arrow_RP"
                android:src="@drawable/left_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requst Promo"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/hk_grotesk_bold" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:layout_margin="20dp"
    android:layout_below="@id/toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="promotion name"
            android:textSize="12sp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/tv1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="World Green Day"
            android:textSize="14sp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="promo validity"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/tv2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="21 March-27 March"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_below="@+id/tv2"

            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv2"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/date_icon" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo Discount (%)"
            android:textSize="12sp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/tv3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="5%"
            android:layout_below="@+id/tv3"
            android:fontFamily="@font/hk_grotesk_regular"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp"
            android:fontFamily="@font/hk_grotesk_semi_bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/tv4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_promo"
        android:background="@drawable/rounded"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="submit"
        android:padding="17dp"
        android:textSize="15sp"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        android:textColor="@color/white"
        android:textAllCaps="false" />

</LinearLayout>
</RelativeLayout>