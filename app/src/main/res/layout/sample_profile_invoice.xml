<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round_high"
        android:paddingTop="10dp"
        android:backgroundTint="@color/white">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="25dp"
            android:id="@+id/iv"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/profile_image_templ" />

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Esther Berry"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hk_grotesk_bold"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/job_id"
            android:gravity="center"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvtime">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/job"
                android:text="Job Id : "
                android:textSize="17sp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/job_code"
                android:layout_toEndOf="@id/job"
                android:text="115454554"
                android:textSize="17sp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <Button
            android:id="@+id/viewprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_id"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="BMW X5 2019"
            android:textColor="@color/white"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/orange"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>



</RelativeLayout>