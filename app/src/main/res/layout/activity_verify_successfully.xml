<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context="Common.VerifySuccessfully">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/message"
        android:id="@+id/IVmsg"></ImageView>
    <TextView
        android:id="@+id/TVmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IVmsg"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="Request Send Successfully"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/hk_grotesk_bold"></TextView>

    <TextView
        android:id="@+id/TVtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVmsg"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/our_expert_team_will_check"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:fontFamily="@font/hk_grotesk_regular"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVtxt"
        android:padding="20dp"
        android:textAllCaps="false"
        android:id="@+id/goto_Home"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded"
        android:text="Go to Home Dashboard"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:fontFamily="@font/hk_grotesk_semi_bold"/>

</RelativeLayout>