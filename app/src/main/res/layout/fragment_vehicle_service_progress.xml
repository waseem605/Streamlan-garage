<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Frgment_Container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Common.Fragments.Navigations.VehicleServiceProgress">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/toptb">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/combined_shape_V"
                android:src="@drawable/combined_shape" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Service Progress"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/notifications" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toptb"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:id="@+id/midtb">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/you_have_5_open_requests"
                android:textColor="@color/orange"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/forma_1" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        app:tabTextColor="@color/black"
        app:tabTextAppearance="@style/CustomTabText"
        app:tabSelectedTextColor="@color/Back_color"
        app:tabIndicatorColor="@color/Back_color"
        android:id="@+id/tbvsp"
        android:layout_below="@id/midtb" />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/VPvsp"
        android:layout_below="@id/tbvsp"
        />
</RelativeLayout>





</FrameLayout>