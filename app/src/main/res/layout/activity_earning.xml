<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.Invoice.EarningActivity">
    <Toolbar
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/Toolbar_earning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/left_arrow"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/toolbarBank"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invoice"
                android:fontFamily="@font/hk_grotesk_semi_bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>

        </RelativeLayout>
    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Toolbar_earning"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/rounded"
                android:padding="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/left_calander"
                    android:background="@drawable/white_rounded">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calander_icon"
                        android:src="@drawable/icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/earning_datw"
                        android:layout_toEndOf="@id/calander_icon"
                        android:text="@string/today_feb_20_2020"
                        android:textColor="@color/black"
                        android:fontFamily="@font/hk_grotesk_regular"
                        android:textSize="13sp"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Jobs"
                    android:fontFamily="@font/hk_grotesk_regular"
                    android:textSize="16sp"
                    android:id="@+id/job_text"
                    android:layout_below="@id/left_calander"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="45dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="25sp"
                    android:id="@+id/dolor"
                    android:fontFamily="@font/hk_grotesk_bold"
                    android:textColor="@color/Back_color"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/job_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/active_job_text"
                    android:text="54.47"
                    android:textSize="43sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/job_text"
                    android:layout_toEndOf="@id/dolor"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/hk_grotesk_bold"/>

                <View
                    android:layout_width="170dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/active_job_text"
                    android:layout_marginTop="30dp"
                    android:id="@+id/line_left"
                    android:background="@color/gray_doted"/>


