<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/hk_grotesk_bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="World Health Day (world21)"
        android:id="@+id/tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="13sp"
        android:fontFamily="@font/hk_grotesk_medium"
        android:layout_margin="10dp"
        android:text="Active"
        android:textColor="@color/green"
        android:id="@id/tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="13sp"
        android:fontFamily="@font/hk_grotesk_semi_bold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:text="March 21-March 27"
        android:layout_below="@id/tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_light"
        android:textSize="13sp"
        android:fontFamily="@font/hk_grotesk_regular"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="Discount:5 %"
        android:layout_below="@id/tv2" />

</RelativeLayout>