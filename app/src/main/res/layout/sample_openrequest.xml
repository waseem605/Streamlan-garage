<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver">
    <LinearLayout
        android:id="@+id/llopenrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottomsheet"
            android:backgroundTint="@color/white"
            android:layout_marginStart="10dp"
            android:paddingTop="15dp"
            android:paddingStart="12dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Esther Berry"
                android:textSize="15sp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textColor="@color/black"
                android:id="@+id/user_name_TV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:text="Job #"
                android:fontFamily="@font/hk_grotesk_medium"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/job" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentStart="true"
                android:textSize="15dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/hk_grotesk_medium"
                android:text="Today 08:30 AM"
                android:textColor="@color/black"
                android:paddingBottom="10dp"
                android:layout_below="@id/user_name_TV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:text="#asdv2121"
                android:textSize="13sp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:id="@+id/jobno"
                android:layout_below="@id/job" />

        </RelativeLayout>
        <include layout="@layout/sample_carschedule"></include>
        <LinearLayout
            android:id="@+id/llbtnsampleopenrequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_background_b_round">

            <Button
                android:id="@+id/btnopenrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/Back_color"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:padding="15dp"
                android:layout_marginStart="100dp"
                android:textColor="@color/white"
                android:layout_marginEnd="100dp"
                android:textSize="14sp"
                android:fontFamily="@font/hk_grotesk_regular"
                android:text="Estimate" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>