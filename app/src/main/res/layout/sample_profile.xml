<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:backgroundTint="@color/white"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/garage_pic"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Xpress Auto Repair and Services"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/hk_grotesk_bold"
            android:gravity="center" />

        <Button
            android:id="@+id/btnvehicleservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtime"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="@string/vehicle_service"
            android:textColor="@color/white"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/orange"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="16sp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>

</RelativeLayout>